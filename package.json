{
  "name": "ts-lerna",
  "description": "My yarn workspace practice",
  "main": "index.js",
  "author": "Shinya Ohyanagi",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@emotion/react": "11.14.0",
    "@emotion/styled": "11.14.1",
    "antd": "4.24.16",
    "axios": "0.30.0",
    "emotion": "11.0.0",
    "path-to-regexp": "6.3.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "5.3.4",
    "react-use": "17.6.0",
    "swr": "0.5.7"
  },
  "devDependencies": {
    "@storybook/addon-actions": "9.0.8",
    "@storybook/addon-essentials": "8.6.14",
    "@storybook/addon-knobs": "8.0.1",
    "@storybook/addon-links": "9.1.13",
    "@storybook/addon-viewport": "9.0.8",
    "@storybook/addons": "7.6.17",
    "@storybook/cli": "9.1.13",
    "@storybook/node-logger": "8.6.14",
    "@storybook/preset-typescript": "3.0.0",
    "@storybook/react": "9.1.13",
    "@storybook/theming": "8.6.14",
    "@testing-library/react": "16.3.0",
    "@testing-library/react-hooks": "8.0.1",
    "@types/css-minimizer-webpack-plugin": "3.2.4",
    "@types/faker": "6.6.11",
    "@types/jest": "30.0.0",
    "@types/mini-css-extract-plugin": "2.5.1",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@types/react-lifecycles-compat": "3.0.1",
    "@types/react-router-dom": "5.1.7",
    "@types/styled-system": "5.1.11",
    "@types/terser-webpack-plugin": "5.0.3",
    "@types/webpack": "5.28.0",
    "@types/webpack-dev-server": "4.7.2",
    "@typescript-eslint/eslint-plugin": "8.46.2",
    "@typescript-eslint/parser": "8.46.2",
    "axios-mock-adapter": "2.1.0",
    "cache-loader": "4.1.0",
    "css-loader": "7.1.2",
    "css-minimizer-webpack-plugin": "7.0.2",
    "eslint": "9.38.0",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.23.3",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "7.23.2",
    "eslint-plugin-react-hooks": "7.0.0",
    "faker": "6.6.6",
    "fork-ts-checker-webpack-plugin": "9.1.0",
    "html-webpack-plugin": "5.3.1",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "lerna": "9.0.0",
    "less": "4.1.1",
    "less-loader": "12.3.0",
    "lint-staged": "16.2.6",
    "markdownlint-cli": "0.27.1",
    "mini-css-extract-plugin": "2.9.4",
    "npm-run-all": "4.1.5",
    "prettier": "3.6.2",
    "react-hooks-testing-library": "0.6.0",
    "react-lifecycles-compat": "3.0.4",
    "react-router": "7.9.4",
    "storycap": "5.0.1",
    "style-loader": "4.0.0",
    "terser-webpack-plugin": "5.1.1",
    "thread-loader": "4.0.4",
    "ts-jest": "29.4.5",
    "ts-loader": "9.5.4",
    "ts-node": "10.0.0",
    "typescript": "5.9.3",
    "webpack": "5.36.2",
    "webpack-cli": "6.0.1",
    "webpack-dev-server": "5.2.2"
  },
  "resolutions": {
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2"
  },
  "scripts": {
    "bump": "lerna version --no-git-tag-version --no-push",
    "build": "run-p -l build:*cli",
    "build:app": "lerna run build --scope app",
    "build:cli": "lerna run build --scope cli",
    "lint": "run-p -l lint:*",
    "lint:md": "markdownlint README.md",
    "lint:ts": "eslint 'packages/*/**/*.ts{,x}'",
    "precommit": "lint-staged",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "screenshot": "storycap --serverCmd 'start-storybook -p 6006' --serverTimeout 100000 http://localhost:6006 -i '**/regression'",
    "test": "jest --maxWorkers=1",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/configs/tsconfig.test.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFilesAfterEnv": [
      "./configs/jest.setup.ts"
    ],
    "testMatch": [
      "<rootDir>/packages/**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "testEnvironment": "jsdom",
    "testURL": "http://localhost/",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
