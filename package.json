{
  "name": "ts-lerna",
  "description": "My yarn workspace practice",
  "main": "index.js",
  "author": "Shinya Ohyanagi",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-router-dom": "5.2.0",
    "react-use": "15.3.8"
  },
  "devDependencies": {
    "@storybook/addon-actions": "6.1.15",
    "@storybook/addon-essentials": "6.1.15",
    "@storybook/addon-knobs": "6.1.15",
    "@storybook/addon-links": "6.1.15",
    "@storybook/addon-viewport": "6.1.15",
    "@storybook/addons": "6.1.15",
    "@storybook/cli": "6.1.15",
    "@storybook/node-logger": "6.1.15",
    "@storybook/preset-typescript": "3.0.0",
    "@storybook/react": "6.1.15",
    "@storybook/theming": "6.1.15",
    "@testing-library/react": "11.2.3",
    "@testing-library/react-hooks": "5.0.0",
    "@types/css-minimizer-webpack-plugin": "1.1.1",
    "@types/faker": "5.1.5",
    "@types/jest": "26.0.20",
    "@types/mini-css-extract-plugin": "1.2.2",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@types/react-lifecycles-compat": "3.0.1",
    "@types/react-router-dom": "5.1.7",
    "@types/styled-system": "5.1.10",
    "@types/terser-webpack-plugin": "5.0.2",
    "@types/webpack": "4.41.26",
    "@types/webpack-dev-server": "3.11.1",
    "@typescript-eslint/eslint-plugin": "4.12.0",
    "@typescript-eslint/parser": "4.12.0",
    "cache-loader": "4.1.0",
    "css-loader": "5.0.1",
    "css-minimizer-webpack-plugin": "1.2.0",
    "eslint": "7.17.0",
    "eslint-config-airbnb-typescript": "12.0.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "faker": "5.1.0",
    "fork-ts-checker-webpack-plugin": "6.1.0",
    "html-webpack-plugin": "5.0.0-beta.4",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lerna": "3.22.1",
    "less": "4.1.0",
    "less-loader": "7.3.0",
    "lint-staged": "10.5.3",
    "markdownlint-cli": "0.26.0",
    "mini-css-extract-plugin": "1.3.4",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "react-lifecycles-compat": "3.0.4",
    "react-router": "5.2.0",
    "storycap": "3.0.3",
    "style-loader": "2.0.0",
    "terser-webpack-plugin": "5.1.1",
    "thread-loader": "3.0.1",
    "ts-jest": "26.4.4",
    "ts-loader": "8.0.14",
    "ts-node": "9.1.1",
    "typescript": "4.1.3",
    "webpack": "5.17.0",
    "webpack-cli": "4.4.0",
    "webpack-dev-server": "3.11.2"
  },
  "scripts": {
    "bump": "lerna version --no-git-tag-version --no-push",
    "lint": "run-p -l lint:*",
    "lint:md": "markdownlint README.md",
    "lint:ts": "eslint 'packages/*/**/*.ts{,x}'",
    "precommit": "lint-staged",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "screenshot": "storycap --serverCmd 'start-storybook -p 6006' --serverTimeout 100000 http://localhost:6006 -i '**/regression'",
    "test": "jest --maxWorkers=1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/tsconfig.test.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testMatch": [
      "<rootDir>/packages/**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "testURL": "http://localhost/",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
