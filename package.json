{
  "name": "ts-lerna",
  "description": "My yarn workspace practice",
  "main": "index.js",
  "author": "Shinya Ohyanagi",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@emotion/react": "11.1.5",
    "@emotion/styled": "11.1.5",
    "emotion": "11.0.0",
    "path-to-regexp": "6.2.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "5.2.0",
    "react-use": "17.2.1",
    "swr": "0.5.4"
  },
  "devDependencies": {
    "@storybook/addon-actions": "6.2.2",
    "@storybook/addon-essentials": "6.2.2",
    "@storybook/addon-knobs": "6.2.2",
    "@storybook/addon-links": "6.2.2",
    "@storybook/addon-viewport": "6.2.2",
    "@storybook/addons": "6.2.2",
    "@storybook/cli": "6.2.2",
    "@storybook/node-logger": "6.2.2",
    "@storybook/preset-typescript": "3.0.0",
    "@storybook/react": "6.2.2",
    "@storybook/theming": "6.2.2",
    "@testing-library/react": "11.2.6",
    "@testing-library/react-hooks": "5.1.1",
    "@types/css-minimizer-webpack-plugin": "1.1.3",
    "@types/faker": "5.5.0",
    "@types/jest": "26.0.22",
    "@types/mini-css-extract-plugin": "1.4.1",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.3",
    "@types/react-lifecycles-compat": "3.0.1",
    "@types/react-router-dom": "5.1.7",
    "@types/styled-system": "5.1.11",
    "@types/terser-webpack-plugin": "5.0.3",
    "@types/webpack": "4.41.27",
    "@types/webpack-dev-server": "3.11.3",
    "@typescript-eslint/eslint-plugin": "4.20.0",
    "@typescript-eslint/parser": "4.20.0",
    "cache-loader": "4.1.0",
    "css-loader": "5.2.0",
    "css-minimizer-webpack-plugin": "1.3.0",
    "eslint": "7.23.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.23.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "faker": "5.5.2",
    "fork-ts-checker-webpack-plugin": "6.2.0",
    "html-webpack-plugin": "5.3.1",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lerna": "3.22.1",
    "less": "4.1.1",
    "less-loader": "7.3.0",
    "lint-staged": "10.5.4",
    "markdownlint-cli": "0.27.1",
    "mini-css-extract-plugin": "1.4.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "react-hooks-testing-library": "0.6.0",
    "react-lifecycles-compat": "3.0.4",
    "react-router": "5.2.0",
    "storycap": "3.0.4",
    "style-loader": "2.0.0",
    "terser-webpack-plugin": "5.1.1",
    "thread-loader": "3.0.1",
    "ts-jest": "26.5.4",
    "ts-loader": "8.1.0",
    "ts-node": "9.1.1",
    "typescript": "4.2.3",
    "webpack": "5.30.0",
    "webpack-cli": "4.6.0",
    "webpack-dev-server": "3.11.2"
  },
  "resolutions": {
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.3"
  },
  "scripts": {
    "bump": "lerna version --no-git-tag-version --no-push",
    "build": "run-p -l build:*cli",
    "build:app": "lerna run build --scope app",
    "build:cli": "lerna run build --scope cli",
    "lint": "run-p -l lint:*",
    "lint:md": "markdownlint README.md",
    "lint:ts": "eslint 'packages/*/**/*.ts{,x}'",
    "precommit": "lint-staged",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "screenshot": "storycap --serverCmd 'start-storybook -p 6006' --serverTimeout 100000 http://localhost:6006 -i '**/regression'",
    "test": "jest --maxWorkers=1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/configs/tsconfig.test.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFilesAfterEnv": [
      "./configs/jest.setup.ts"
    ],
    "testMatch": [
      "<rootDir>/packages/**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "testURL": "http://localhost/",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
